= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :to_user_id
    = f.number_field :to_user_id
  .field
    = f.label :from_user_id
    = f.number_field :from_user_id
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :sent_at
    = f.datetime_select :sent_at
  .field
    = f.label :read_at
    = f.datetime_select :read_at
  .actions
    = f.submit 'Save'
