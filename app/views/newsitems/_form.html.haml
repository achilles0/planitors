= form_for @newsitem do |f|
  - if @newsitem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@newsitem.errors.count, "error")} prohibited this newsitem from being saved:"
      %ul
        - @newsitem.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :icon
    = f.text_field :icon
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
